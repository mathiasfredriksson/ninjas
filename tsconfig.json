{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"noImplicitThis": true,
    	"strictNullChecks": true,
		"target": "es5",
		"lib": ["es5", "es6", "dom"],
		"jsx": "react",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true
	}
}